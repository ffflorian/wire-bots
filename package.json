{
  "author": "Florian Keller <github@floriankeller.de>",
  "devDependencies": {
    "husky": "1.2.0",
    "lerna": "3.5.0",
    "lint-staged": "8.1.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --config tslint.json --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "wire-bots",
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap --reject-cycles",
    "clean": "lerna run clean",
    "deploy": "lerna run deploy",
    "dist": "yarn clean && lerna run dist",
    "lint": "tslint -p tsconfig.json --fix \"**/*.ts\" ",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.ts\"",
    "test": "yarn && yarn dist && lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
