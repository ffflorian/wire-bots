{
  "author": "Florian Keller <github@floriankeller.de>",
  "description": "My Wire bots using the Wire Bot API.",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.5",
    "@ffflorian/tslint-config": "0.7.0",
    "husky": "3.0.7",
    "lerna": "3.16.4",
    "lint-staged": "9.4.0",
    "prettier": "1.18.2",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1"
  },
  "engines": {
    "node": ">= 10.9",
    "yarn": ">= 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --config tslint.json --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "wire-bots",
  "prettier": "@ffflorian/prettier-config",
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap --reject-cycles",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "dist": "yarn clean && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:other && yarn lint:ts",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier \"**/*.{json,md}\"",
    "release": "lerna publish",
    "test": "yarn lint:ts && yarn lint:other",
    "test:all": "yarn lint && lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
